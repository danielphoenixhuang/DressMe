<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalysisActivity">

    <ImageView
        android:id="@+id/imageView_outfitPictureAnalysis"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView_outfitTopAnalysis"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_outfitPictureAnalysis"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView_outfitBottomAnalysis"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_outfitPictureAnalysis"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView_topColor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Color 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_outfitTopAnalysis" />

    <TextView
        android:id="@+id/textView_topColor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Color 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_topColor1" />

    <TextView
        android:id="@+id/textView_bottomColor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color 1"
        app:layout_constraintStart_toStartOf="@+id/imageView_outfitBottomAnalysis"
        app:layout_constraintTop_toBottomOf="@+id/imageView_outfitBottomAnalysis" />

    <TextView
        android:id="@+id/textView_bottomColor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color 2"
        app:layout_constraintStart_toStartOf="@+id/imageView_outfitBottomAnalysis"
        app:layout_constraintTop_toBottomOf="@+id/textView_bottomColor1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:text="Matching Status: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_matchingStatus" />

    <TextView
        android:id="@+id/textView_matchingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView_topColor2" />
</android.support.constraint.ConstraintLayout>